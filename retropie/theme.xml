<theme>
    <formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	<include>./../_inc/templates/layout.xml</include>

	<view name="system">
		<image name="background" extra="true">
			<path>./_inc/art-2.jpg</path>
		</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
        </image>
	</view>

	<view name="grid">		
		<text name="md_description">
			<pos>0.665 0.31</pos>
			<size>0.30 0.50</size>
		</text>
	</view>

	<view name="detailed, video, grid">	
		<image name="md_image">
			<pos>0.678 0.410</pos>
			<maxSize>0.346 0.416</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<pos>2 0</pos>
		</text>
		
		<text name="md_name, md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_releasedate, md_lastplayed">
			<pos>2 0</pos>
		</text>
		
		<text name="md_description">
			<fontSize>0.025</fontSize>
			<lineSpacing>1.4</lineSpacing>
		</text>
		
		<image name="metadata" extra="true">
			<path></path>
		</image>
	</view>
	
	<view name="basic, detailed, video, grid">
		<image name="logo">
			<path>./_inc/system.svg</path>
			<pos>0.5 0.079</pos>
			<maxSize>0.45 0.1</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<text name="system_name_1" extra="true">
			<text></text>
		</text>
		
		<image name="controller" extra="true">
			<path>./_inc/controller.svg</path>
			<pos>0.040 0.080</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0 0.5</origin>
			<color>bbbbbb</color>
		</image>
	</view>
</theme>