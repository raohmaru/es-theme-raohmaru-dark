<theme>
	<formatVersion>4</formatVersion>
	<!-- <include>./_inc/templates/carousel-horizontal.xml</include> -->
	<include>./_inc/templates/carousel-vertical.xml</include>
    <!-- <include>./_inc/templates/navigationsounds.xml</include> -->
	
	<view name="system">
		<image name="background" extra="true">
			<path>./${system.name}/_inc/art.jpg</path>
			<default>./_inc/images/bg-dark.png</default>
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>

		<image name="logo">
			<path>./${system.name}/_inc/system-inverted.svg</path>
        </image>
		
		<image name="systemSelector" extra="true">
			<path>./_inc/images/systemcarousel.svg</path>
			<size>1 0</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<color>FFFFFFFF</color>
		</image>
		
		<helpsystem name="help">
			<fontSize>0.03</fontSize>
			<textColor>999999ff</textColor>
			<iconColor>ffffff88</iconColor>
            <pos>0.012 0.96</pos>
		</helpsystem>
		
		<text name="systemInfo">
			<pos>0.98 0.03</pos>
			<size>.175 0.05</size>
			<origin>1 0</origin>
			<backgroundColor>FFFFFFb8</backgroundColor>
			<fontSize>0.03</fontSize>
			<alignment>center</alignment>
		</text>
	</view>
	
	<view name="grid">
		<image name="metadata" extra="true">
			<pos>0.642 0.251</pos>
			<origin>0 0</origin>
			<size>0.359 0.280</size>
			<path>./_inc/images/metadata-grid.png</path>
		</image>
		
		<image name="description" extra="true">
			<pos>0.642 0.580</pos>
			<origin>0 0</origin>
			<size>0.358 0.283</size>
			<path>./_inc/images/description.png</path>
		</image>
	</view>
	
	<view name="detailed, video">
		<image name="metadata" extra="true">
			<pos>0.757 0.251</pos>
			<origin>0 0</origin>
			<size>0.235 0.280</size>
			<path>./_inc/images/metadata.png</path>
		</image>
		
		<image name="description" extra="true">
			<pos>0.405 0.639</pos>
			<origin>0 0</origin>
			<size>0.570 0</size>
			<path>./_inc/images/description.png</path>
		</image>
	</view>
	
	<view name="basic, detailed, video, grid">
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>d8d8d8</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/Exo/Exo-Light.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<size>0.12 0.04</size>
		</text>
		
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount">
			<color>ebebeb</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/Exo/Exo-Medium.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<size>0 0</size>
		</text>
		
		<text name="md_description">
			<color>d8d8d8</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/Exo/Exo-Light.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<lineSpacing>1.4</lineSpacing>
		</text>
		
		<datetime name="md_releasedate, md_lastplayed">
			<color>d8d8d8</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/Exo/Exo-Medium.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<size>0 0.04</size>
		</datetime>

		<text name="md_name">
			<color>FFFFFF</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_inc/fonts/Changa/Changa-Regular.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<alignment>left</alignment>
		</text>
		
		<textlist name="gamelist">
			<selectorColor>ffffffbb</selectorColor>
			<selectedColor>ff8000</selectedColor>
			<primaryColor>ebebeb</primaryColor>
			<secondaryColor>ffe599</secondaryColor>
			<fontPath>./_inc/fonts/Changa/Changa-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<scrollSound>./_inc/sounds/scroll2.wav</scrollSound>
		</textlist>
				
		<image name="background">
			<path>./_inc/images/bg-dark.png</path>
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="header" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0</size>
			<path>./_inc/images/header.png</path>
		</image>
		
		<image name="footer" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0</size>
			<path>./_inc/images/footer.png</path>
		</image>
		
		<helpsystem name="help">
			<fontSize>0.03</fontSize>
		</helpsystem>
	</view>
</theme>