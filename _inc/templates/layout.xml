		<text name="md_name">
			<pos>0.765 0.205</pos>
			<size>0.225 0.03</size>
			<fontSize>0.027</fontSize>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>${labelsPosX} 0.25</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>${valuesPosX} 0.255</pos>
